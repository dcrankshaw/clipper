FROM python:2.7.14-slim-stretch

RUN apt-get update && apt-get install -y --no-install-recommends \
       build-essential cmake git libgoogle-glog-dev libgtest-dev libiomp-dev libleveldb-dev \
       liblmdb-dev libopencv-dev libopenmpi-dev libsnappy-dev libprotobuf-dev openmpi-bin openmpi-doc \
       protobuf-compiler python-dev libgflags-dev && pip install future==0.16.* protobuf==3.5.* numpy==1.14.*

RUN git clone --recursive https://github.com/caffe2/caffe2.git && cd caffe2 \
    && git submodule update --init && mkdir build && cd build && cmake .. \
    && make install

RUN cd ~ && python -c 'from caffe2.python import core' 2>/dev/null && echo "Success" || echo "Failure"

